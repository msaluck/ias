<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textProfilDetailName"
        android:text="Image Detail"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textProfilDetailUserID"
        android:text="User ID"
        android:layout_below="@id/textProfilDetailName"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textProfilDetailStnkNumber"
        android:text="Stnk Number"
        android:layout_below="@id/textProfilDetailUserID"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textProfilDetailSimNumber"
        android:text="Sim Number"
        android:layout_below="@id/textProfilDetailStnkNumber"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textProfilDetailChapterName"
        android:text="Chapter Name"
        android:layout_below="@id/textProfilDetailSimNumber"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textProfilDetailBranchName"
        android:text="Branch Name"
        android:layout_below="@id/textProfilDetailChapterName"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textProfilDetailBrandName"
        android:text="Brand Name"
        android:layout_below="@id/textProfilDetailBranchName"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textProfilDetailCarTypeName"
        android:text="Car Type Name"
        android:layout_below="@id/textProfilDetailBrandName"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textProfilDetailYear"
        android:text="Year"
        android:layout_below="@id/textProfilDetailCarTypeName"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textProfilDetailCommunityAdminName"
        android:text="Community Admin Name"
        android:layout_below="@id/textProfilDetailYear"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textProfilDetailIasAdminName"
        android:text="Ias Admin Name"
        android:layout_below="@id/textProfilDetailCommunityAdminName"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textProfilDetailRegionName"
        android:text="Region Name"
        android:layout_below="@id/textProfilDetailIasAdminName"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>


</RelativeLayout>
</ScrollView>